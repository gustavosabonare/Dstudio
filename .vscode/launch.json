    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "runtimeVersion": "10.16.0",
            "restart": true,
            "timeout": 20000,
            "runtimeArgs": [
                "run-script",
                "start",
            ],
            "outFiles": [
                "${workspaceFolder}/dist/server.js"
            ],
            "port": 9229
        }
    ]
}